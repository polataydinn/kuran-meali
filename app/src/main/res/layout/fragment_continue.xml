<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".fragments.continuefragment.ContinueFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg">

        <ImageView
            android:id="@+id/continue_back_press"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_back_white" />

        <LinearLayout
            android:id="@+id/continue_meal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="12dp"
                android:text="@string/meal"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="6dp"
                android:text="@string/listen"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <ImageView
            android:id="@+id/continue_toggle_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:src="@drawable/ic_toggle_button" />

        <TextView
            android:id="@+id/continue_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:text="1/114"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/continue_sura_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:text="Fatiha Suresi"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/continue_top_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="42dp"
            android:layout_marginTop="120dp"
            android:text="Arapça"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/continue_top_text_size_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <SeekBar
            android:id="@+id/continue_top_text_seek"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="28dp"
            android:layout_marginTop="130dp"
            android:scrollbarThumbVertical="@color/white" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:layout_marginStart="32dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="32dp">

            <TextView
                android:id="@+id/continue_arabic_ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ذٰلِكَ الْكِتَابُ لَا رَيْبَۚۛ ف۪يهِۚۛ هُدًى لِلْمُتَّق۪ينَۙ"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </ScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"
            android:elevation="1dp"
            android:src="@drawable/custom_radius_background_transparent_white" />

        <ImageView
            android:id="@+id/continue_top_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="24dp"
            android:elevation="2dp"
            android:src="@drawable/custom_radius_background_transparent_white" />

        <TextView
            android:id="@+id/continue_bottom_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="42dp"
            android:layout_marginTop="300dp"
            android:text="Türkçe"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/continue_bottom_text_size_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="42dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <SeekBar
            android:id="@+id/continue_bottom_text_seek"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="28dp"
            android:layout_marginTop="310dp"
            android:scrollbarThumbVertical="@color/white" />

        <ScrollView
            android:id="@+id/continue_bottom_scroll"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="start"
            android:layout_marginStart="32dp"
            android:layout_marginTop="340dp"
            android:layout_marginEnd="32dp">

            <TextView
                android:id="@+id/continue_turkish_ayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rahman ve Rahim olan Allah’ın adıyla"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </ScrollView>

        <ImageView
            android:id="@+id/continue_bottom_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="24dp"
            android:elevation="3dp"
            android:src="@drawable/custom_radius_background_transparent_white" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="530dp"
            android:src="@drawable/ic_quran" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="650dp">

            <TextView
                android:id="@+id/continue_current_lenght"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/continue_total_lenght"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:20"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/continue_chant_current_progress"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="650dp"
            android:scrollbarThumbVertical="@color/white" />

        <ImageView
            android:id="@+id/continue_auto_play_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="645dp"
            android:src="@drawable/ic_autoplay_white" />

        <ImageView
            android:id="@+id/continue_play_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="start"
            android:layout_marginStart="60dp"
            android:layout_marginTop="640dp"
            android:src="@drawable/ic_play_white" />

        <ImageView
            android:id="@+id/continue_ayat_note"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="590dp"
            android:src="@drawable/ic_comment_white" />

        <ImageView
            android:id="@+id/continue_next_ayat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="540dp"
            android:src="@drawable/ic_next_white" />

        <ImageView
            android:id="@+id/continue_previous_ayat"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="540dp"
            android:src="@drawable/ic_previous_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="480dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/continue_add_note"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_take_note_white" />

            <ImageView
                android:id="@+id/continue_search_sura_and_ayat"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_search_white" />

            <ImageView
                android:id="@+id/continue_sura_explanation"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/ic_sura_explanation"/>

            <ImageView
                android:id="@+id/continue_share_ayat"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_share_white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/owner_name_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="695dp"
            android:text="@string/cemal_name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>
</ScrollView>